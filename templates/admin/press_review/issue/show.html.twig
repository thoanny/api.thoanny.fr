{% extends 'base.html.twig' %}

{% block title %}Issue{% endblock %}

{% block body %}
    <h1>Issue</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ issue.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ issue.name }}</td>
            </tr>
            <tr>
                <th>Published_at</th>
                <td>{{ issue.publishedAt ? issue.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_press_review_issue_index') }}" class="btn btn-secondary">back to list</a>

    <a href="{{ path('app_admin_press_review_issue_edit', {'id': issue.id}) }}" class="btn btn-primary">edit</a>

    {{ include('admin/press_review/issue/_delete_form.html.twig') }}
{% endblock %}
