{% extends 'base.html.twig' %}

{% block title %}Server{% endblock %}

{% block body %}
    <h1>Server</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ server.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ server.name }}</td>
            </tr>
            <tr>
                <th>Difficulty</th>
                <td>{{ server.difficulty }}</td>
            </tr>
            <tr>
                <th>StartAt</th>
                <td>{{ server.startAt ? server.startAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Closed</th>
                <td>{{ server.closed ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_once_human_server_index') }}" class="btn btn-secondary">back to list</a>

    <a href="{{ path('app_admin_once_human_server_edit', {'id': server.id}) }}" class="btn btn-primary">edit</a>

    {{ include('admin/once_human/server/_delete_form.html.twig') }}
{% endblock %}
