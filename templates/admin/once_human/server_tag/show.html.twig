{% extends 'base.html.twig' %}

{% block title %}ServerTag{% endblock %}

{% block body %}
    <h1>ServerTag</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ server_tag.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ server_tag.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ server_tag.description }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>
                    {% if server_tag.icon %}
                        <img src="{{ vich_uploader_asset(server_tag) }}" alt="" width="32" height="32">
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_once_human_server_tag_index') }}" class="btn btn-secondary">back to list</a>

    <a href="{{ path('app_admin_once_human_server_tag_edit', {'id': server_tag.id}) }}" class="btn btn-primary">edit</a>

    {{ include('admin/once_human/server_tag/_delete_form.html.twig') }}
{% endblock %}
