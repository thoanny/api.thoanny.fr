{% extends 'base.html.twig' %}

{% block title %}Specialization{% endblock %}

{% block body %}
    <h1>Specialization</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ specialization.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ specialization.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ specialization.type }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ specialization.description }}</td>
            </tr>
            <tr>
                <th>Levels</th>
                <td>{{ specialization.levels ? specialization.levels|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>
                    {% if specialization.icon %}
                        <img src="{{ vich_uploader_asset(specialization) }}" alt="">
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_once_human_specialization_index') }}" class="btn btn-secondary">back to list</a>

    <a href="{{ path('app_admin_once_human_specialization_edit', {'id': specialization.id}) }}" class="btn btn-primary">edit</a>

    {{ include('admin/once_human/specialization/_delete_form.html.twig') }}
{% endblock %}
