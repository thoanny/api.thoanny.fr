{% extends 'base.html.twig' %}

{% block title %}Item{% endblock %}

{% block body %}
    <h1>Item</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ item.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ item.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ item.description }}</td>
            </tr>
            <tr>
                <th>HowToGet</th>
                <td>{{ item.howToGet }}</td>
            </tr>
            <tr>
                <th>Rarity</th>
                <td>{{ item.rarity }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ item.weight }}</td>
            </tr>
            <tr>
                <th>Scenarios</th>
                <td>{{ item.scenario|join(', ') }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>
                    {% if item.icon %}
                        <img src="{{ vich_uploader_asset(item) }}" alt="">
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_once_human_item_index') }}" class="btn btn-secondary">back to list</a>

    <a href="{{ path('app_admin_once_human_item_edit', {'id': item.id}) }}" class="btn btn-primary">edit</a>

    {{ include('admin/once_human/item/_delete_form.html.twig') }}
{% endblock %}
