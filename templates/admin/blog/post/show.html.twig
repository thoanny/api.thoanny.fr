{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content ? post.content|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ post.status }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PublishedAt</th>
                <td>{{ post.publishedAt ? post.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>SeoTitle</th>
                <td>{{ post.seoTitle }}</td>
            </tr>
            <tr>
                <th>SeoDescription</th>
                <td>{{ post.seoDescription }}</td>
            </tr>
            <tr>
                <th>SeoKeywords</th>
                <td>{{ post.seoKeywords }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ post.slug }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ post.imageName }}</td>
            </tr>
            <tr>
                <th>ImageCaption</th>
                <td>{{ post.imageCaption }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_blog_post_index') }}">back to list</a>

    <a href="{{ path('app_admin_blog_post_edit', {'id': post.id}) }}">edit</a>

    {{ include('admin/blog/post/_delete_form.html.twig') }}
{% endblock %}
