{% extends 'base.html.twig' %}

{% block title %}Membership{% endblock %}

{% block body %}
    <h1>Membership</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ membership.id }}</td>
            </tr>
            <tr>
                <th>Network</th>
                <td>{{ membership.network }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ membership.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ membership.name }}</td>
            </tr>
            <tr>
                <th>Uid</th>
                <td>{{ membership.uid }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ membership.updatedAt ? membership.updatedAt|format_datetime('long', 'short') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_membership_index') }}" class="btn btn-secondary">back to list</a>

    <a href="{{ path('app_admin_membership_edit', {'id': membership.id}) }}" class="btn btn-primary">edit</a>

    {{ include('admin/membership/_delete_form.html.twig') }}
{% endblock %}
