{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div>
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm, {attr: {class: 'rounded-box p-6 shadow-xl w-72 bg-base-100'}}) }}
        <h1>Inscription</h1>
        {{ form_row(registrationForm.username, {label: 'Pseudonyme'}) }}
        {{ form_row(registrationForm.email, {label: 'Adresse e-mail'}) }}
        {{ form_row(registrationForm.plainPassword, { label: 'Mot de passe' }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-primary">S'inscrire</button>
        <a href="{{ path('app_login') }}" class="btn">Se connecter</a>
        {{ form_end(registrationForm) }}
    </div>

{% endblock %}
